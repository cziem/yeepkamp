<% include partials/header %>

<div class="container">
  <div class="row">
    <header style="text-align: center">
      <h1>Add a CampGround</h1>
      <a  class="btn btn-info" href="/campgrounds">See all Campgrounds</a>
    </header>

    <div class="container" style="width: 40%; margin: 45px auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Add new campground">      
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="Enter price" min="0.01" step="0.01">      
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="image url here...">
        </div>
        <div class="form-group">
          <textarea class="form-control"
          name="desc">
          </textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
