<% include partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YK Username</p>
      <div class="list-group">
        <li class="list-group-item active">info 1</li>
        <li class="list-group-item">info 3</li>
        <li class="list-group-item">info 2</li>
      </div>
    </div>
    
    <!-- Right Section -->
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="image-responsive" src="<%= campground.image %>" alt="picture of <%= campground.name %>">

        <div class="caption-full">
          <h4 class="pull-right">$9:00/night</h4>
          <h4>
            <a href=""><%= campground.name %></a>
            <span class="meta-user">
              <em>
                by <%= campground.author.username %>
              </em>
            </span>
          </h4>
          <p class="desc">
            <%= campground.desc %>
          </p>
          <div>
            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          </div>
        </div>
      </div>

      <div class="well">
        <div class="col-lg-6">
          <% if (campground.comments.length < 1) { %>
            <h4 class="reviews-header">Be the first to add a review</h4>
          <% } else { %>
            <h4 class="reviews-header">All Reviews</h4>
          <% } %>
        </div>
        <div class="text-right">
          <a 
          class="btn btn-warning"
          href="/campgrounds/<%= campground._id %>/comments/new">Add a review
          </a>
        </div>
        <hr />
        <% campground.comments.forEach(comment => { %>
          <div class="row">
            <div class="col-md-12 comment">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right"><%= comment.createdAt.toDateString() %></span>
              <p class="desc"><%= comment.text %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
  
      <form action="/campgrounds/<%= campground._id %>" method="POST">
        <button class="btn btn-danger">Remove</button>
      </form>
      <a 
        class="btn btn-primary"
        href="/campgrounds">Back
      </a>

<% include partials/footer %>