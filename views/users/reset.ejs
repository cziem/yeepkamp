<% include ../partials/header %>

<form class="form-signin" action="/reset/<%= token %>" method="POST">
  <div class="text-center mb-4">
    <img class="mb-2" src="/images/logo.png" alt="yeepkamp logo" width="100" height="100">
    <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>
  </div>

  <div class="form-label-group">
    <input class="form-control" type="password" name="password" autoFocus>
    <label for="password">Password</label>
  </div> 

  <div class="form-label-group">
    <input class="form-control" type="password" name="confirm">
    <label for="password">Password</label>
  </div> 
  
  <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
</form>
