<% include ../partials/header %>

<form class="form-signin" action="/forgot-password" method="POST">
  <div class="text-center mb-4">
    <img class="mb-2" src="/images/logo.png" alt="yeepkamp logo" width="100" height="100">
    <h1 class="h3 mb-3 font-weight-normal">Recover your password</h1>
    <a class="btn btn-info" href="/login">login</a>
  </div>

  <div class="form-label-group">
    <input class="form-control" type="email" name="email" placeholder="example@abc.com" autoFocus>
    <label for="email">Email</label>
  </div> 
  
  <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
</form>
